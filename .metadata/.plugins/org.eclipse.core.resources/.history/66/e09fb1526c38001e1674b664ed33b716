package com.kodnest.method;

import java.util.Scanner;

public class The_Calculator_Dilemma {

	public static void main(String[] args) {
		Scanner scan=new Scanner(System.in);
		System.out.println("Enter 1 for addition");
		System.out.println("enter 2 for subtraction");
		System.out.println("enter 3 for multiplication");
		System.out.println("enter 4 for division");
		int operation =scan.nextInt();
		System.out.println("enter two values");
		int num1=scan.nextInt();
		int num2=scan.nextInt();
		switch(operation) {
		case 1:
			System.out.println("Addition result for"+num1+"and "+num2+"is"+num1+num2);
			break;
			
		case 2:
			System.out.println("Subtraction result for"+num1+"and "+num2+"is"+(num1-num2));
			break;
			
		case 3:
			System.out.println("multiplication result for"+num1+"and "+num2+"is"+(num1*num2));
			break;
			
		case 4:
			System.out.println("division result for"+num1+"and "+num2+"is"+(num1/num2));
			break;
		default:
			System.out.println("Select the Operation correctly");
		}
		
	
	
	
	
	
	
	}
	
	

}
