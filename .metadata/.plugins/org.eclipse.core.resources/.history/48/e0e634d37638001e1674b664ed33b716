package com.kodnest.methods;

import java.util.Scanner;

public class TaxCalculator {

	public static void main(String[] args) {
		Scanner scan=new Scanner(System.in);
		System.out.println("Enter the purchase amount and tax rate");
		double amount=scan.nextDouble();
		double taxrate=scan.nextDouble();
		System.out.println("Total cost including tax is"+calculateTotalWithTax(amount,taxrate));
		
		
	}
	public static double calculateTotalWithTax(double purchase_amount,double tax_rate) {
		return (purchase_amount * tax_rate)+purchase_amount;
	}

}
